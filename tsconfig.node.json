{
  "compilerOptions": {
    "composite": true,
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["node"] // Include Node.js types and Vite types
  },
  "include": ["tsdown.config.ts", "build", "tests/**/*.ts", "src/content-script/util/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
