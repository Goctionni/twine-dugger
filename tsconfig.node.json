{
  "compilerOptions": {
    "composite": true,
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["node", "vite/client"] // Include Node.js types and Vite types
  },
  "include": ["vite.config.ts", "tsup.config.ts", "tests/**/*.ts", "src/content-script/util/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
